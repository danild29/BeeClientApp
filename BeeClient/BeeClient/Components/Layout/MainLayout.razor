@inherits LayoutComponentBase

<div class="page">
    @if (LoggedIn)
    {
        <div class="sidebar">
            <NavMenu />
        </div>
    }
    <Alert />

    <main>
        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>


@code {
    public bool LoggedIn = true;
}